@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<div id="intro-message" class="container">
    <h1>Master New <span id="glow-emphasis">Skills</span> With Expert-Guided Learning</h1>
    <p>Learn at your own pace from top instructors. Get real-world skills that help you 
        <span id="glow-emphasis">grow</span>, <span id="glow-emphasis">excel</span>, 
        and <span id="glow-emphasis">lead</span> anywhere, anytime.</p>

    <button class="intro-btn1" >
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard">Go to Dashboard</a>
            
        }
        else
        {
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
        }
    </button>

    <a asp-area="" asp-controller="Course" asp-action="AllCourses">
        <button class="intro-btn2">Browse all courses</button>
    </a>
    

</div>
<div id="intro-image-container" class="container">
    <figure>
        <img id="introimg" src="~/images/backgrounds/girl-smiling-by-laptop-md.jpg" />
    </figure>
</div>
